.relative(:class="[exportDisplay]")
  select.block.w-full.pl-3.pr-6.text-black.bg-white.outline-none.border.rounded.appearance-none.leading-normal(
    :class="[exportClass, exportSize, exportError]"
    class="disabled:cursor-not-allowed"
    :disabled="exportDisabled"
    v-on="$listeners"
  )
    option(v-for="item in options" :value="item.value") {{item.label}}
  .fas.fa-caret-down.absolute.inset-y-0.right-0.flex.items-center.pr-2.text-xs.text-gray-800.pointer-events-none
  .absolute.mt-1.ml-px.text-xs.text-danger.leading-tight(v-if="isError") {{ errorMessage }}
